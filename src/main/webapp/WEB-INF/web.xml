  </servlet>
  <filter>
    <filter-name>ApiOriginFilter</filter-name>
    <filter-class>com.ibm.test.ApiOriginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>ApiOriginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

